<%- include('../partials/head', { title: '07 - Animations GSAP' }) %>
<body>
	<div class="lesson-container">
		<%- include('../partials/lesson-header', {
			lessonNumber: '07',
			lessonTitle: 'Animations GSAP',
			docSlug: '07-animations',
			headerContent: `
				<div class="header-controls">
					<select id="animation-select" aria-label="Type d animation">
						<option value="bounce">Bounce</option>
						<option value="bounce-real">Bounce Real</option>
						<option value="spin">Spin 360Â°</option>
						<option value="elastic">Elastic</option>
						<option value="sequence">Sequence</option>
						<option value="stagger">Stagger</option>
						<option value="wave">Wave</option>
					</select>
					<button id="play-btn" class="btn-primary">Play</button>
					<button id="reset-btn" class="btn-secondary">Reset</button>
				</div>
			`
		}) %>
		<canvas id="canvas"></canvas>

		<!-- Panneau de controle (overlay fixe) -->
		<div class="control-panel control-panel-overlay">
			<h3>Controles Animation</h3>

			<div class="control-group">
				<label>
					<input type="checkbox" id="glb-mode-toggle">
					Mode Modele 3D
				</label>
			</div>

			<div class="control-group">
				<label for="duration">Duree (s)</label>
				<input type="range" id="duration" min="0.3" max="3" step="0.1" value="1">
				<span id="duration-value">1s</span>
			</div>

			<div class="control-group">
				<label for="easing-select">Easing</label>
				<select id="easing-select">
					<option value="power1.out">Power1 (leger)</option>
					<option value="power2.inOut" selected>Power2 (smooth)</option>
					<option value="power3.out">Power3 (fort)</option>
					<option value="elastic.out(1, 0.3)">Elastic</option>
					<option value="bounce.out">Bounce</option>
					<option value="back.out(1.7)">Back</option>
				</select>
			</div>

			<div class="control-group">
				<label>
					<input type="checkbox" id="repeat-toggle">
					Repeter
				</label>
			</div>

			<div class="control-group">
				<label>
					<input type="checkbox" id="yoyo-toggle">
					Yoyo (aller-retour)
				</label>
			</div>

			<div class="control-group">
				<label for="speed">Vitesse</label>
				<input type="range" id="speed" min="0.1" max="3" step="0.1" value="1">
				<span id="speed-value">1x</span>
			</div>

			<div class="control-group timeline-controls">
				<h4>Timeline</h4>
				<div class="progress-bar-container">
					<div id="progress-bar" class="progress-bar"></div>
				</div>
				<div class="timeline-buttons">
					<button id="pause-btn" class="btn-small">Pause</button>
					<button id="resume-btn" class="btn-small">Resume</button>
					<button id="reverse-btn" class="btn-small">Reverse</button>
				</div>
			</div>
		</div>
	</div>

	<!-- GSAP doit etre charge via script tag (pas ES module natif) -->
	<script src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/gsap.min.js"></script>
	<%- include('../partials/importmap') %>
	<script type="module" src="/static/js/lessons/07-animations/index.js"></script>
</body>
</html>
